extends /layouts/default

block vars
	- var title = global.activate.title
	- var success = global.activate.success
	- var error = global.activate.error
	- var pageClass = 'message:unsubscribe'

block content
	.first-screen
		.message
			header.page-header
				h1=title
				p.lead.js-success(hidden)!= success
				p.lead.js-error(hidden)!= error
