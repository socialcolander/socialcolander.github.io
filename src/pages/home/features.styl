.features
	list-style-type none
	padding 0
	margin -10px

	display flex
	width 100%
	font-size 100%
	font-family 'PT Sans',Arial,sans-serif

	@media (max-width: 800px)
		flex-direction column

	&__item
		display flex
		flex-direction column

		flex 1
		align-items center
		background rgba(0, 0, 0, .25)
		padding 15px
		margin 10px
		text-align left

	&__title
		display block
		margin-bottom 12px
		text-align center
		font-size 120%

	&__icon
		max-width 50%
		margin-bottom 30px

		@media (max-width: 800px)
			max-width 30%
