.how-it-works
	list-style-type none
	padding 0
	margin -10px

	display flex
	width 100%
	font-size 110%
	font-family 'PT Sans',Arial,sans-serif

	@media (max-width: 800px)
		flex-direction column

	&__item
		display flex
		flex-direction column
		// justify-content center

		flex 1
		align-items center
		background rgba(0, 0, 0, .25)
		padding 15px
		margin 10px
		text-align center

	&__icon
		width 40%
		padding 10% 0 15%

		@media (max-width: 800px)
			width 30%
