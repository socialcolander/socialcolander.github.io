#__bs_notify__ {
	background: #333 !important;
	top: auto !important;
	bottom: 0;
	border-radius: 0 !important;
	padding: 4px 8px 2px !important;
	font-size: 12px !important;
	border-top-left-radius: 4px !important;
	animation: fadein .3s ease forwards, fadeout .3s ease 1s forwards;
}

@keyframes fadein {
	from { opacity: 0; }
	to   { opacity: 1; }
}

@keyframes fadeout {
	from { opacity: 1; }
	to   { opacity: 0; }
}
