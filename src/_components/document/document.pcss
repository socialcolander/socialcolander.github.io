html {
	-webkit-font-smoothing: antialiased;
}

* {
	box-sizing: border-box;
}

body {
	margin: 0;
	padding: 48px;
	padding: 10vh 10vw;
	background: #fff;
	color: #555;
	text-align: left;
	font-size: 120%;
	font-family: 'PT Serif', Georgia, serif;
	line-height: 1.6;
}

.content {
	max-width: 800px;
}

h1, h2, h3, strong, b {
	font-weight: bold;
	color: rgb(38, 38, 38);
}

@media (max-width: 800px) {
	body {
		font-size: 100%;
	}
}
