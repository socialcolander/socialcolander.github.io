.twitter-sign-in {
	display: inline-block;
	vertical-align: top;
	border: 0;
	background: #1b95e0;
	color: #fff !important;
	font-size: 16px;
	font-family: Arial, sans-serif;
	font-weight: 100;
	border-radius: 4px;
	padding: 4px 8px 2px;
	cursor: pointer;
	letter-spacing: .025em;

	margin: 1.75em 0;
}

.twitter-sign-in img {
	width: 24px;
	height: 24px;
	vertical-align: -7px;
	padding-right: 4px;
}

.twitter-sign-in:hover,
.twitter-sign-in:focus {
	background: #0c7abf;
}
