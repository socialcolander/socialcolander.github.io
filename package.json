{
	"name": "social_colander",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"start": "run-s build",
		"server": "run-s start watch_and_server",

		"//": "Build to dist and watch settings",
		"clear": "/bin/rm -rf ./dist/*",
		"build": "run-s -n clear view scripts styles assets",
		"watch": "run-p -n watch:*",
		"browsersync": "browser-sync start -c ./browsersync.config.js",
		"watch_and_server": "run-p browsersync watch",

		"//": "Webpack configs",
		"webpack": "webpack --display-error-details",
		"scripts": "run-s webpack -- -p",
		"watch:scripts": "run-s webpack -- -w -d",
		"watch:js": "# onchange './src/**/*.js' -- npm run watch:scripts",

		"//": "View compile (pug/jade)",
		"view": "pug -H -O pug.config.js ./src --out dist",
		"watch:view": "run-s view -- -w",

		"//": "PostCSS to css",
		"styles": "postcss --local-plugins -c postcss.json",
		"watch:styles": "run-s styles -- -w",

		"//": "Assets helpers",
		"assets": "cp -r ./src/assets ./dist/assets && cp ./src/_root/* ./dist",
		"watch:assets": "onchange './src/assets/**/*' -- run-s assets"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/socialcolander/socialcolander.github.io.git"
	},
	"author": "ymatuhin",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/socialcolander/socialcolander.github.io/issues"
	},
	"homepage": "https://github.com/socialcolander/socialcolander.github.io#readme",
	"devDependencies": {
		"babel": "^6.5.2",
		"babel-core": "^6.10.4",
		"babel-loader": "^6.2.4",
		"babel-plugin-transform-runtime": "^6.9.0",
		"babel-preset-es2015": "^6.9.0",
		"babel-preset-stage-0": "^6.5.0",
		"browser-sync": "^2.13.0",
		"debug": "^2.2.0",
		"install": "^0.8.1",
		"jquery": "^3.0.0",
		"lost": "^6.8.1",
		"npm": "^3.9.6",
		"npm-run-all": "^2.3.0",
		"onchange": "^2.4.0",
		"postcss": "^5.0.21",
		"postcss-bem": "^0.4.1",
		"postcss-cli": "^2.5.2",
		"postcss-cssnext": "^2.6.0",
		"postcss-import": "^8.1.2",
		"postcss-nested": "^1.0.0",
		"postcss-short": "^1.4.0",
		"pug": "^2.0.0-beta3",
		"pug-cli": "^1.0.0-alpha6",
		"purify-css": "^1.1.9",
		"webpack": "^1.13.1"
	},
	"dependencies": {
		"babel-polyfill": "^6.9.1",
		"babel-runtime": "^6.9.2"
	}
}
