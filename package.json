{
  "name": "social_colander",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clear": "rm -rf ./dist && mkdir ./dist",
    "prebuild": "npm run clear",
    "build": "$(npm bin)/npm-run-all view modules:prod styles:prod assets",
    "watch": "$(npm bin)/npm-run-all -p view:watch styles:dev watch:js watch:assets watch:root",
    "dev": "$(npm bin)/npm-run-all build -p server watch",
    "server": "$(npm bin)/browser-sync start -c ./browsersync.config.js",
    "modules:dev": "$(npm bin)/webpack -w -d --display-error-details",
    "modules:prod": "$(npm bin)/webpack -p --display-error-details",
    "watch:js": "$(npm bin)/onchange './src/**/*.js' -- npm run modules:dev",
    "view": "$(npm bin)/npm-run-all -p view:ru view:en",
    "view:watch": "$(npm bin)/npm-run-all -p view:ru:watch view:en:watch",
    "view:ru": "$(npm bin)/pug -H -O pug.ru.config.js ./src --out dist/ru",
    "view:ru:watch": "$(npm bin)/pug -w -H -O pug.ru.config.js ./src --out dist/ru",
    "view:en": "$(npm bin)/pug -H -O pug.en.config.js ./src --out dist/",
    "view:en:watch": "$(npm bin)/pug -w -H -O pug.en.config.js ./src --out dist/",
    "styles:dev": "$(npm bin)/postcss -w --local-plugins -c postcss.json",
    "styles:prod": "$(npm bin)/postcss --local-plugins -c postcss.json",
    "prestyles:purify": "cat ./dist/**/*.html ./dist/*.js > ./dist/all_content",
    "styles:purify": "$(npm bin)/purifycss ./dist/index.min.css ./dist/all_content --min --info --out ./dist/index.min.css",
    "poststyles:purify": "rm ./dist/all_content",
    "poststyles:prod": "npm run styles:purify",
    "assets": "cp -r ./src/assets ./dist/assets && cp ./src/_root/* ./dist",
    "watch:assets": "$(npm bin)/onchange './src/assets/**/*' -- npm run assets",
    "watch:root": "$(npm bin)/onchange './src/assets/**/*' -- npm run assets",
    "predeploy": "npm run build",
    "deploy": "git add . && git commit",
    "postdeploy": "git subtree pull --prefix dist origin master && git subtree push --prefix dist origin master && git pull && git push -u origin develop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socialcolander/socialcolander.github.io.git"
  },
  "author": "ymatuhin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/socialcolander/socialcolander.github.io/issues"
  },
  "homepage": "https://github.com/socialcolander/socialcolander.github.io#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.13.0",
    "debug": "^2.2.0",
    "install": "^0.8.1",
    "jquery": "^3.0.0",
    "lost": "^6.8.1",
    "npm": "^3.9.6",
    "npm-run-all": "^2.3.0",
    "onchange": "^2.4.0",
    "postcss": "^5.0.21",
    "postcss-bem": "^0.4.1",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-import": "^8.1.2",
    "postcss-nested": "^1.0.0",
    "postcss-short": "^1.4.0",
    "pug": "^2.0.0-beta3",
    "pug-cli": "^1.0.0-alpha6",
    "purify-css": "^1.1.9",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "babel-runtime": "^6.9.2"
  }
}
