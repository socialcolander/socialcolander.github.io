{
  "name": "social_colander",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clear": "rm -r ./dist/*",
    "prebuild": "run-s clear",

    "start": "run-s build",
    "server": "run-s start watch_and_server",

    "build": "run-s view modules:prod styles:prod assets",
    "watch": "run-p view:watch styles:dev watch:js watch:assets",
    "browsersync": "browser-sync start -c ./browsersync.config.js",
    "watch_and_server": "run-p browsersync watch",

    "modules:dev": "webpack -w -d --display-error-details",
    "modules:prod": "webpack -p --display-error-details",
    "watch:js": "onchange './src/**/*.js' -- npm run modules:dev",

    "view": "pug -H -O pug.config.js ./src --out dist",
    "view:watch": "pug -w -H -O pug.config.js ./src --out dist",

    "styles:dev": "postcss -w --local-plugins -c postcss.json",
    "styles:prod": "postcss --local-plugins -c postcss.json",

    "assets": "cp -r ./src/assets ./dist/assets && cp ./src/_root/* ./dist",
    "watch:assets": "onchange './src/assets/**/*' -- run-s assets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socialcolander/socialcolander.github.io.git"
  },
  "author": "ymatuhin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/socialcolander/socialcolander.github.io/issues"
  },
  "homepage": "https://github.com/socialcolander/socialcolander.github.io#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.13.0",
    "debug": "^2.2.0",
    "install": "^0.8.1",
    "jquery": "^3.0.0",
    "lost": "^6.8.1",
    "npm": "^3.9.6",
    "npm-run-all": "^2.3.0",
    "onchange": "^2.4.0",
    "postcss": "^5.0.21",
    "postcss-bem": "^0.4.1",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-import": "^8.1.2",
    "postcss-nested": "^1.0.0",
    "postcss-short": "^1.4.0",
    "pug": "^2.0.0-beta3",
    "pug-cli": "^1.0.0-alpha6",
    "purify-css": "^1.1.9",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "babel-runtime": "^6.9.2"
  }
}
