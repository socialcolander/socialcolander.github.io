{
  "name": "social_colander",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clear": "rm -rf ./dist && mkdir ./dist",
    "prebuild": "npm run clear",
    "build": "$(npm bin)/parallelshell 'npm run server' 'npm run view:prod' 'npm run modules:prod' 'npm run styles:prod' 'npm run assets'",
    "dev": "$(npm bin)/parallelshell 'npm run build' 'npm run styles:dev' 'npm run watch:js' 'npm run watch:assets'",
    "server": "$(npm bin)/browser-sync start -c ./browsersync.config.js",
    "modules:dev": "$(npm bin)/rollup -m inline -c ./rollup.config.js",
    "modules:prod": "$(npm bin)/rollup -c ./rollup.config.js",
    "watch:js": "$(npm bin)/onchange './assets/scripts/*.js' -- npm run modules:dev",
    "view:dev": "$(npm bin)/pug -H -w -O pug.config.js ./src --out dist/",
    "view:prod": "$(npm bin)/pug -H -O pug.config.js ./src --out dist/",
    "styles:dev": "$(npm bin)/postcss -w --local-plugins -c postcss.json",
    "styles:prod": "$(npm bin)/postcss --local-plugins -c postcss.json",
    "assets": "cp -r ./src/assets ./dist/assets",
    "watch:assets": "$(npm bin)/onchange './src/assets/**/*' -- npm run assets",
    "commit": "git add dist && git commit",
    "push": "git subtree push --prefix dist origin master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socialcolander/socialcolander.github.io.git"
  },
  "author": "ymatuhin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/socialcolander/socialcolander.github.io/issues"
  },
  "homepage": "https://github.com/socialcolander/socialcolander.github.io#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015-rollup": "^1.1.1",
    "browser-sync": "^2.13.0",
    "install": "^0.8.1",
    "lost": "^6.8.1",
    "npm": "^3.9.6",
    "onchange": "^2.4.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.21",
    "postcss-bem": "^0.4.1",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-import": "^8.1.2",
    "postcss-nested": "^1.0.0",
    "postcss-short": "^1.4.0",
    "pug": "^2.0.0-beta3",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^0.26.3",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-uglify": "^0.3.1"
  }
}
